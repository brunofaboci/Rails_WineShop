<div class='container'>
  <div class='row justify-content-right'>
    <div class="col-6">
      <h4 class='page-header'>Countries</h4>
    </div>
  </div>
</div>

<div class='container'>
  <div class='row justify-content-right'>
    <div class="col-6">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th scope="col">Id</th>
            <th scope="col">Description</th>
            <th>
              <%= link_to new_admins_backoffice_country_path, class:'btn btn-outline-success btn-sm' do %>
                New
              <% end %>
            </th>
          </tr>
        </thead>
        <tbody>
          <% @countries.each do |country|%>
          <tr>
            <td><%= country.id %></td>
            <td><%= country.description %></td>
            <td>
              <%= link_to edit_admins_backoffice_country_path(country), class:'btn btn-outline-primary btn-sm' do %>
                  Edit
                <% end %>
                <%= link_to admins_backoffice_country_path(country), method: :delete, class:'btn btn-outline-danger btn-sm', data: {confirm: 'Are You Sure?'} do %>
                  Delete
                <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <div class='container'>
        <div class='row justify-content-center'>
          <div class="col-6">
            <%= paginate @countries %>
          </div>
        </div>
      </div>  

    </div>
  </div>
</div>
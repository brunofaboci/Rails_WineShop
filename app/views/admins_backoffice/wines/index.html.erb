<div class='container'>
  <div class='row justify-content-right'>
    <div class="col-6">
      <h4 class='page-header'>Wines</h4>
    </div>
  </div>
</div>

<div class='container'>
  <div class='row justify-content-right'>
    <div class="col-12">
      <table class="table table-striped table-hover table-sm">
        <thead>
          <tr>
            <th scope="col">Id</th>
            <th scope="col">Description</th>
            <th scope="col">Type</th>
            <th scope="col">Grape Type</th>
            <th scope="col">Country</th>
            <th scope="col">Price</th>
            <th scope="col">Amount</th>
            <th scope="col">Image</th>
            <th scope="col">Admin</th>
            <th>
              <%= link_to new_admins_backoffice_wine_path, class:'btn btn-outline-success btn-sm' do %>
                New
              <% end %>
            </th>
          </tr>
        </thead>
        <tbody>
          <% @wines.each do |wine|%>
          <tr>
            <td><%= wine.id %></td>
            <td><%= wine.description %></td>
            <td><%= wine.type.description %></td>
            <td><%= wine.grape_type.description %></td>
            <td><%= wine.country.description %></td>
            <td><%= wine.price %></td>
            <td><%= wine.amount %></td>
            <td><%= image_tag wine.url_img, width:50, height:50 %></td>
            <td><%= wine.admin.email %></td>
            <td>
              <%= link_to edit_admins_backoffice_wine_path(wine), class:'btn btn-outline-primary btn-sm' do %>
                  Edit
                <% end %>
                <%= link_to admins_backoffice_wine_path(wine), method: :delete, class:'btn btn-outline-danger btn-sm', data: {confirm: 'Are You Sure?'} do %>
                  Delete
                <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <div class='container'>
        <div class='row justify-content-center'>
          <div class="col-6">
            <%= paginate @wines %>
          </div>
        </div>
      </div>  

    </div>
  </div>
</div>
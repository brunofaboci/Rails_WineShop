<div class='row'>
  <div class='col-lg-12'>
    <h3 class='page-header'>Admins</h3>
  </div>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Email</th>
      <th>
        <%= link_to new_admins_backoffice_admin_path, class:'btn btn-outline-success btn-sm' do %>
          Add
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @admins.each do |admin|%>
    <tr>
      <td><%= admin.id %></td>
      <td><%= admin.email %></td>
      <td>
        <%= link_to edit_admins_backoffice_admin_path(admin), class:'btn btn-outline-primary btn-sm' do %>
            Edit
          <% end %>
          <%= link_to admins_backoffice_admin_path(admin), method: :delete, class:'btn btn-outline-danger btn-sm', data: {confirm: 'Are You Sure?'} do %>
            Delete
          <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<div class='text-center'>
  <%= paginate @admins %>
</div>

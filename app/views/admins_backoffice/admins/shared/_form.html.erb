<div class='container'>
  <div class='row justify-content-right'>
    <div class="col-6">
      <h4 class='page-header'><%= action_message %></h4>
    </div>
  </div>
</div>


<div class='container'>
  <div class="row justify-content-right">
    <div class="col-6"> 
      <%= form_with(model: [:admins_backoffice, @admin ], local: true) do |form| %>
        <div class='mb-3'>
          <%= form.label :email, class:"form-label" %> 
          <%= form.text_field :email, class:'form-control form-control-sm', placeholder:'example@example.com' %>
        </div>
        <div class='mb-3'>
          <%= form.label :password %>
          <%= form.password_field :password, class:'form-control form-control-sm'%>
        </div>
        <div class='mb-3'>
          <%= form.label :password_confirmation %>
          <%= form.password_field :password_confirmation, class:'form-control form-control-sm'%>
        </div>
        <button type='submit' class='btn btn-primary btn-sm'>
          Submit
        </button>
        <%= link_to admins_backoffice_admins_path, class: 'btn btn-danger btn-sm' do %>
          Cancel
        <%end%>

      <% end %>
    </div>
  </div>
</div>
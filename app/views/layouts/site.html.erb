<!DOCTYPE html>
<html>
  <head>
    <title>WineShop</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application' %>
    <%= stylesheet_link_tag 'site' %>
    
  </head>

  <body>

    <div class='container'>
      <nav class="navbar navbar-light bg-light">
        <div class="container-fluid">
          <%= link_to site_welcome_index_path, class:"navbar-brand" do %>
            <h4>Wine Shop</h4>
          <% end %> 

          <div class="d-flex">
          
            <ul class="navbar-nav me-auto mb-2 mb-md-0 row">
              <form class="d-flex">
                <% unless user_signed_in? %>
                  <li> 
                    <%= link_to new_user_session_path, class:"navbar-brand active" do %>
                      <h6>Login</h6>
                    <% end %> 
                  </li>
                  <li> 
                    <%= link_to new_user_registration_path, class: "navbar-brand active" do %>
                      <h6>Sign In</h6>
                    <% end %>
                  </li>
                <% else %>
                  <li>
                  <%= link_to site_welcome_index_path, class:"navbar-brand active" do %>
                      <h6><%= current_user.email %></h6>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to users_backoffice_welcome_index_path, class:"navbar-brand active" do %>
                      <h6>Profile</h6>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to destroy_user_session_path, class:"navbar-brand active", method: :delete do %>
                      <h6>Logout</h6>
                    <% end %>
                  </li>
                <% end %>
              </form>
            </ul>
          </div>
        </div>
      </nav>
      <br />
      <br />
      <%= yield %>
    </div>
    
    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag 'site' %>

  </body>
  
</html>
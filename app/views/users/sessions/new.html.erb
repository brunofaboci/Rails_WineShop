<div class='container'>
  <br />
  <div class="row justify-content-center ">
    <div class="col-4">
      <div>
        <h2 class='text-center'>Log in</h2>
      </div>
      <br />

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="mb-3">
          <h5 class='text-center'><%= f.label :email %></h5>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control form-control-sm", placeholder:"example@example.com" %>
        </div>

        <div class="mb-3">
          <h5 class='text-center'><%= f.label :password %></h5>
          <%= f.password_field :password, class:"form-control form-control-sm"  %>
        </div>

        <div class="row justify-content-center" >
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
        </div>
        <br />

        <div class='row justify-content-center'>
          <div class="actions ">
            <%= f.submit "Log in" %>
          </div>
          <div class='col-md-4 offset-md-2'>
            <%= link_to 'Forgot your password?', new_user_password_path %>
          </div>
        </div>
        <br />
        <br />

        <div class='row justify-content-center'>
          <div class='col-3'>
            <%= link_to 'Home', site_welcome_index_path %>
          </div>
          <div class='col-3'>
            <%= link_to 'Admin?', admins_backoffice_welcome_index_path %>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>